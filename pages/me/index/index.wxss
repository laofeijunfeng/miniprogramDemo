/* pages/me/index/index.wxss */
.containe {
  height: 300rpx;
  width: 100vw;
  background-color: #2c2c2c;
  box-shadow: 0rpx 10rpx 20rpx #bfbfbf;
}
.containe image {
  height: 125rpx;
  width: 125rpx;
  border-radius: 50%;
}
.avatar, .name, .address {
  display: flex;
  justify-content: space-around;
  color: #ffffff;
}
.name {
  margin: 40rpx 0 20rpx 0;
}
.address {
  font-size: 80%;
}

.functions {
  margin: 40rpx 0;
  padding: 0 40rpx;
}
.functions .item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 40rpx 0;
}
.functions image {
  height: 40rpx;
  width: 40rpx;
  margin: 0 20rpx;
}
.functions text {
  font-size: 80%;
}